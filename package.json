{
  "name": "playwright_cucumber_framework",
  "version": "0.1",
  "description": "A ready to use Test Automation Framework using cucumber, playwright and typescript",
  "main": "index.js",
  "scripts": {
    "test-on-chrome": "cross-env BROWSER=chromium npx cucumber-js --config=cucumber.js",
    "test-on-firefox": "cross-env BROWSER=firefox npx cucumber-js ----config=cucumber.js",
    "test-on-webkit": "cross-env BROWSER=webkit npx cucumber-js --config=cucumber.js",
    "test-on-edge": "cross-env BROWSER=msedge npx cucumber-js --config=cucumber.js"
  },
  "keywords": [
    "cucumber",
    "playwright",
    "BDD",
    "typescript"
  ],
  "author": "Shaheer Hasan",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.45.3",
    "@types/chai": "^4.3.17",
    "@types/node": "^22.0.0",
    "cross-env": "^7.0.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "@cucumber/cucumber": "^10.8.0",
    "chai": "^5.1.1",
    "cucumber-html-reporter": "^7.1.1",
    "dotenv": "^16.4.5",
    "multiple-cucumber-html-reporter": "^3.7.0"
  }
}
